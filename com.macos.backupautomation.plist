<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.macos.backupautomation</string>
    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/path/to/your/repo/run_backup.sh</string>
        <string>config.json</string>
    </array>
    <!-- Schedule: daily at 02:00 AM -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>2</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>
    <key>StandardOutPath</key>
    <string>/var/log/backupautomation.log</string>
    <key>StandardErrorPath</key>
    <string>/var/log/backupautomation.err</string>
    <key>RunAtLoad</key>
    <true/>
</dict>
</plist>
